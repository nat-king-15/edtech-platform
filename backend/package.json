{
  "name": "edtech-backend",
  "version": "1.0.0",
  "description": "Backend API for EdTech Platform with Firebase integration, user authentication, and role-based access control",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node server.js",
    "dev": "nodemon server.js"
  },
  "keywords": [
    "edtech",
    "education",
    "firebase",
    "express",
    "api",
    "authentication",
    "nodejs"
  ],
  "author": "EdTech Platform Team",
  "license": "ISC",
  "dependencies": {
    "@mux/mux-node": "^8.8.0",
    "@types/multer": "^2.0.0",
    "aws-sdk": "^2.1692.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^4.18.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "firebase-admin": "^12.7.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.16",
    "nodemon": "^3.1.10",
    "pdfkit": "^0.17.2",
    "razorpay": "^2.9.6",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!server.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
